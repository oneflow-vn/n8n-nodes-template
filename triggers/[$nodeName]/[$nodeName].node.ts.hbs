import type { INodeType, INodeTypeDescription } from 'n8n-workflow';
import { methods } from './{{nodeName}}.methods';
import { webhookMethods } from './{{nodeName}}.webhookMethods';
import { webhook } from './{{nodeName}}.webhook';
import { properties } from './{{nodeName}}.properties';

export class {{nodeName}} implements INodeType {
	description: INodeTypeDescription = {
		displayName: '{{displayName}}',
		name: '{{camelCase nodeName}}',
		icon: '{{nodeIcon icon}}',
		group: ['trigger'],
		version: 1,
		subtitle:
			'=\{\{$parameter["resource"] + ": " + $parameter["event"].join(", ")\}\}',
		description: '{{description}}',
		defaults: {
			name: '{{defaultName}}',
		},
		inputs: [],
		outputs: ['main'],
		credentials: [],
		webhooks: {{jsValue webhooks}},
		properties,
	};

	webhookMethods = webhookMethods;
	methods = methods;

	webhook = webhook;
}
